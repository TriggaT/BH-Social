<h4>

<% if @post %> 
    <% if comment.user = current_user %>
    <%= link_to "#{comment.content}", edit_post_comment_path %>
    <% else %> 
    <%= "#{comment.user.name}: #{comment.content}"  %>
    <% end %> 
<% elsif @question %>
    <% if comment.user = current_user %>
    <%= link_to "#{comment.content}", edit_question_comment_path %>
    <% else %>
    <% if comment.answer %>
       <div class="answers"> <%= "#{comment.user.name} answered #{comment.content}"%> </div>
    <% else %>
        <%= "#{comment.user.name}: #{comment.content}"  %> 
    <% end %>
<% end %>
</h4>