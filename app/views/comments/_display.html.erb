<h4>
<ul>
<% if @post %>
<li> <%= "#{comment.user.name}: #{comment.content}"  %> </li>
<% elsif @question %> 
    <% if comment.answer %>
        <li style="color:green;">  <%= "#{comment.user.name} answered #{comment.content}" %> </li>
    <% else %>
        <li> <%= "#{comment.user.name}: #{comment.content}"  %> </li>
    <% end %>

    <% else @user %>
        <% if comment.answer %>
            <li style="color:green;">  <%= "#{comment.user.name} answered #{comment.content}" %> </li>
        <% else %>
       
            <li> <%= "#{comment.user.name}: #{comment.content}"  %> </li>
        <% end %>

<% end %>
</ul>

</h4>