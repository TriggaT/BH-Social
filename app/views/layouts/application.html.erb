<!DOCTYPE html>
<html>
  <head>
    <title>BlackHistroySocial</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
      <script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  </head>
  <body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= image_tag("basquiat_crown_KiP.png", :alt => "Knowledge Crown") %>
      <a class="navbar-brand" href="/">Knowledge is Power</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav pull-right">
      <% if current_user %>
        <li class="active"><%= link_to "People", topic_path(topic_people)%></li>
        <li><%= link_to "Places", topic_path(topic_places) %></li>
        <li><%= link_to "Events", topic_path(topic_events) %></li>
        <% else %>
        <li class="active"><%= link_to "Home", root_path %></li>
        <li><%= link_to "Sign Up", new_user_registration_path %></li>
        <li><%= link_to "Sign In", new_user_session_path %></li>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
 </nav>

 <div class="container">
  

  <div class="text-center">
    <h1>Black History Social</h1>



    <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
    <% end -%>
    <%= yield %>
    
    <%if current_user %>
    <br><br> <br><%= button_to "Log Out", destroy_user_session_path, :method => :delete, class: "button5" %><br><br>
    <% end %>
  </div> <!-- /.text-center -->
 </div> <!-- /.container -->

 
  </body>
</html>
