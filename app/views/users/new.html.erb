<h1> Sign Up </h1>

<%= form_for @user do |f| %>
<%= f.label :name %>  <br>
<%= f.text_field :name, value: @user.name %> <br>
<%= f.label :email %>  <br>
<%= f.email_field :email, value: @user.email %> <br>
<%= f.label :password %> <br>
<%= f.password_field :password %> <br>
<%= f.label :password_confirmation, "Confirm Password" %> <br>
<%= f.password_field :password_confirmation %> <br> <br>
<%= f.submit "Sign Up", class: "button3" %>
<% end %>

<br> <%= link_to "Signin with GitHub", '/auth/github', method: :post%>