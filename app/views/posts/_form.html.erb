
<%= form_for [@topic, @post] do |f| %>
<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.label :title %> <br>
<%= f.text_field :title, value: @post.title %> <br> <br>
<%= f.hidden_field :topic_id, value: params[:topic_id] %>
<%= f.label :content  %> <br>
<%= f.text_area :content, value: @post.content %> <br>  <br> 
<%= f.submit :class => 'button3' %> 
<% end %>


